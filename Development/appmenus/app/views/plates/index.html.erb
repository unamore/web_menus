<h1>Listing plates</h1>

<table>
  <thead>
    <tr>
      <th>Codeplate</th>
      <th>Nameplate</th>
      <th>Typeplate</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @plates.each do |plate| %>
      <tr>
        <td><%= plate.codeplate %></td>
        <td><%= plate.nameplate %></td>
        <td><%= plate.typeplate %></td>
        <td><%= link_to 'Show', typeplate_plate_path(@typeplate,plate) %></td>
        <td><%= link_to 'Edit', edit_typeplate_plate_path(@typeplate,plate) %></td>
        <td><%= link_to 'Destroy', typeplate_plate_path(@typeplate,plate), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Plate', new_typeplate_plate_path(@typeplate) %>
