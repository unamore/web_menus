<h1>Listing restaurants</h1>

<table>
  <thead>
    <tr>
      <th>Coderest</th>
      <th>Namerest</th>
      <th>Adressrest</th>
      <th>Contactrest</th>
      <th>Emailrest</th>
      <th>City</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @restaurants.each do |restaurant| %>
      <tr>
        <td><%= restaurant.coderest %></td>
        <td><%= restaurant.namerest %></td>
        <td><%= restaurant.adressrest %></td>
        <td><%= restaurant.contactrest %></td>
        <td><%= restaurant.emailrest %></td>
        <td><%= restaurant.city %></td>
        <td><%= link_to 'Show', restaurant %></td>
        <td><%= link_to 'Edit', edit_restaurant_path(restaurant) %></td>
        <td><%= link_to 'Destroy', restaurant, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

